                <!-- /product-rating -->
            </div>
            <div class="margin-20"></div>

            <hr class="product-hr">
            <div class="product-price">
                <span class="product-price-amount">4003</span>
                <span class="product-price-currency">руб.</span>
            </div>
            <hr class="product-hr">

            <div class="product-sizes">
                Размер:
                <div class="product-sizes-container">
                    <button class="btn btn-square btn-white">S</button>
                    <button class="btn btn-square btn-white">M</button>
                    <button class="btn btn-square btn-white">L</button>
                    <button class="btn btn-square btn-white">XL</button>
                    <button class="btn btn-square btn-white">XXL</button>
