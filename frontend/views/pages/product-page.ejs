            </div>

            <div class="product-onstore">
                <span class="product-onstore-amount">12</span>
                <span class="product-onstore-currency">шт. в наличии</span>
            </div>

            <hr class="product-hr">

            <div class="margin-20"></div>
            <div class="product-buy">
                <button class="btn btn-big btn-round btn-orange">Купить</button>
                <button class="btn btn-big btn-round btn-outline-orange">В корзину</button>
            </div>

            <!-- /product-right-info -->
        </div>
        <!-- /product-info -->
    </div>

