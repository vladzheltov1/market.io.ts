<%- include('../layouts/header') %>

<div class="wrapper form-wrapper">
    <h2>Регистрация</h2>
    <form action="/api/user/signup" method="POST">
        <p class="form-p">
            <label for="firstname" class="form-lable">Имя:</label>
            <input type="text" id="firstname" name="firstname" class="form-control" required>
        </p>
        <p class="form-p">
            <label for="lastname" class="form-lable">Фамилия:</label>
            <input type="text" id="lastname" name="lastname" class="form-control" required>
        </p>
        <p class="form-p">
            <label for="email" class="form-lable">Почта:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </p>
        <p class="form-p">
            <label for="login" class="form-lable">Логин:</label>
            <input type="text" id="login" name="login" class="form-control" required>
        </p>
        <p class="form-p">
            <label for="login" class="form-lable">Пароль:</label>
            <input type="password" autocomplete="new-password" name="pass1" name="pass1" class="form-control" required>
        </p>
        <p class="form-p">
            <label for="login" class="form-lable">Повторите пароль:</label>
            <input type="password" autocomplete="new-password" name="pass2" name="pass2" class="form-control" required>
        </p>
        <p class="form-p">
            <input type="submit" name="btn" class="btn btn-primary" value="Регистрация">
        </p>
    </form>
</div>

<%- include("../layouts/bottom") %> 